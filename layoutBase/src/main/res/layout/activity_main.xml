<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        style="@style/SteakTheme"
        android:id="@+id/lSteak"
        app:layout_constraintBottom_toTopOf="@id/steak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/lPoint">

    </TextView>

    <TextView
        android:id="@+id/cSteak"
        style="@style/SteakTheme"
        android:layout_width="26dp"
        android:layout_height="250dp"
        app:layout_constraintBottom_toTopOf="@id/steak"
        app:layout_constraintEnd_toStartOf="@id/rSteak"
        app:layout_constraintStart_toEndOf="@id/lSteak">

    </TextView>
    <TextView
        style="@style/SteakTheme"
        android:id="@+id/rSteak"
        app:layout_constraintBottom_toTopOf="@id/steak"
        app:layout_constraintStart_toEndOf="@id/rPoint"
        app:layout_constraintEnd_toEndOf="parent">

    </TextView>
    <FrameLayout
        android:id="@+id/leftPos"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/lSteak"
        app:layout_constraintEnd_toEndOf="@id/lPoint">

    </FrameLayout>
    <FrameLayout
        android:id="@+id/centerPos"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/lPoint"
        app:layout_constraintBottom_toTopOf="@id/cSteak"
        app:layout_constraintEnd_toEndOf="@id/rPoint">

    </FrameLayout>
    <FrameLayout
        android:id="@+id/rightPos"
        android:layout_width="0dp"
        android:layout_height="50dp"
        app:layout_constraintStart_toStartOf="@id/rPoint"
        app:layout_constraintBottom_toTopOf="@id/rSteak"
        app:layout_constraintEnd_toEndOf="parent">

    </FrameLayout>

    <ListView
        style="@style/ListViewTheme"
        android:id="@+id/leftListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toStartOf="@id/centerListView"
        app:layout_constraintBottom_toTopOf="@id/steak"
        app:layout_constraintStart_toStartOf="parent">

    </ListView>
    <ListView
        style="@style/ListViewTheme"
        android:id="@+id/centerListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/steak"
        app:layout_constraintStart_toEndOf="@id/leftListView"
        app:layout_constraintEnd_toStartOf="@id/rightListView">

    </ListView>
    <ListView
        style="@style/ListViewTheme"
        android:id="@+id/rightListView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/steak"
        app:layout_constraintStart_toEndOf="@id/centerListView"
        app:layout_constraintEnd_toEndOf="parent">

    </ListView>
    <TextView
        android:id="@+id/steak"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/grey"
        android:text=""
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_bias="1">

    </TextView>
    <Space
        android:id="@+id/lPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.33">

    </Space>
    <Space
        android:id="@+id/rPoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.66">

    </Space>



</androidx.constraintlayout.widget.ConstraintLayout>